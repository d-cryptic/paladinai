# Valkey Configuration for PaladinAI Queue System
# Copy this file to .env and update the values as needed

# Valkey Authentication
VALKEY_PASSWORD=paladinai_queue_pass

# Valkey Commander (Web UI) Authentication
VALKEY_COMMANDER_PASSWORD=admin123

# Queue Configuration
QUEUE_DEFAULT_TIMEOUT=300
QUEUE_RESULT_TTL=3600
QUEUE_FAILURE_TTL=86400

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_TIMEOUT=600
WORKER_HEARTBEAT_INTERVAL=30

# Connection Settings
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_DB=0
VALKEY_MAX_CONNECTIONS=20
VALKEY_SOCKET_TIMEOUT=30
VALKEY_SOCKET_CONNECT_TIMEOUT=30
